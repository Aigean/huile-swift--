@interface PaypswController ()

@end

@implementation PaypswController

- (void)viewDidLoad {
    [super viewDidLoad];
    self.title = @"修改支付密码";
    [self initsubview];
   }
#pragma mark initmethod
-(void)initsubview{
    UILabel * lable  = [UILabel labelWithFrame:CGRectMake(0, 0, SCREENWIDTH, 60*Hight) text:@"输入支付密码验证身份" font:18 textColor:[UIColor colorWithHex:@"333333" andAlpha:1] textAlignment:NSTextAlignmentCenter];
    PasswordInput * inputview = [[PasswordInput alloc] initWithFrame:CGRectMake(10*Width, lable.bottom+10*Hight, SCREENWIDTH-20*Width, 45*Hight)];
    inputview.backgroundColor = [UIColor whiteColor];
    UIButton * button = [UIButton butonWithFrame:CGRectMake(10, inputview.bottom +40, SCREENWIDTH-20, 44) buttonType:UIButtonTypeRoundedRect imageNamed:nil text:@"下一步" textFont:22 textColor:[UIColor whiteColor]];
    button.backgroundColor = [UIColor colorWithHex:@"fc5400" andAlpha:1];
    button.titleLabel.textAlignment = NSTextAlignmentCenter;
    [button addTarget:self action:@selector(push) forControlEvents:UIControlEventTouchUpInside];
    
   [self.view addSubview:lable];
   [self.view addSubview:inputview];
   [self.view addSubview:button];

}
#pragma mark - action
-(void)push{
    pswnewController * vc = [[pswnewController alloc] init];
    [self.navigationController pushViewController:vc animated:YES];
}
- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

